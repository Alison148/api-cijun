{
  "openapi": "3.0.4",
  "info": {
    "title": "ArcadeScore API",
    "description": "API REST para registrar pontuações de fliperama",
    "version": "v1"
  },
  "paths": {
    "/api/Scores": {
      "post": {
        "tags": [
          "Scores"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/ScoreInputDto"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/ScoreInputDto"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/ScoreInputDto"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/Scores/ranking": {
      "get": {
        "tags": [
          "Scores"
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/Scores/player/{player}": {
      "get": {
        "tags": [
          "Scores"
        ],
        "parameters": [
          {
            "name": "player",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "ScoreInputDto": {
        "required": [
          "date",
          "player",
          "score"
        ],
        "type": "object",
        "properties": {
          "date": {
            "type": "string",
            "format": "date-time"
          },
          "score": {
            "maximum": 2147483647,
            "minimum": 0,
            "type": "integer",
            "format": "int32"
          },
          "player": {
            "minLength": 2,
            "type": "string"
          }
        },
        "additionalProperties": false
      }
    }
  }
}